{
    "name": "sqlcollaborative/alwaysencryptedsample",
    "description": "Always Encrypted Sample PHP Application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Justin Dearing",
            "email": "zippy1981@gmail.com"
        }
    ],
    "require": {
        "ext-pdo": "*",
        "monolog/monolog": "^1.22.1",
        "symfony/config": "^3.3",
        "symfony/console": "^3.3",
        "symfony/dependency-injection": "^3.3",
        "symfony/yaml": "^3.3",
        "fzaninotto/faker": "^1.6@dev"

    },
    "require-dev": {
        "ext-xdebug": "*",
        "ext-pdo_odbc": "*",
        "phpunit/phpunit": "^7.5.9",
        "phpunit/dbunit": "^4.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SqlCollaborative\\AlwaysEncryptedSample\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SqlCollaborative\\AlwaysEncryptedSample\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "phpcs src/ public/ test/",
        "cs-fix": "phpcbf src/ public/ test/",
        "phpmd": "phpmd src/,public/,test text codesize,cleancode,design,naming",
        "lint": "phplint src index.php",
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
    },
    "minimum-stability": "dev"
}
